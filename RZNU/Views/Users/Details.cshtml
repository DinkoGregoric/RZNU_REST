@model RZNU.Models.User
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>User e-mail: @Model.Email</li>
    @if (!Model.Books.Any()) {
        <li>No rented books so far!</li>
    } else {
        <li>List of books owned by @Model.Name
            <ul> 
                @foreach (var book in Model.Books) {
                    <li>@book.Name</li>
                }
            </ul>
        </li> 
    }
</ul>